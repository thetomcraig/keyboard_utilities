{
  "title": "Moving Word-by-Word in Terminal Emulators",
  "author": "",
  "homepage": "",
  "hostpage": "",
  "manual": "",
  "import_url": "",
  "rules": [
    {
      "description": "Hyper word-wise movement (Terminals)",
      "manipulators": [
        {
          "from": {
            "key_code": "i",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_shift",
                "right_option"
              ]
            }
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^com\\.googlecode\\.iterm2$",
                "net\\.kovidgoyal\\.kitty$"
              ]
            }
          ],
          "to": [
            {
              "key_code": "escape"
            },
            {
              "key_code": "b"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_shift",
                "right_option"
              ]
            }
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^com\\.googlecode\\.iterm2$",
                "net\\.kovidgoyal\\.kitty$"
              ]
            }
          ],
          "to": [
            {
              "key_code": "escape"
            },
            {
              "key_code": "f"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
