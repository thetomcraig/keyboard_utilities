{
  "title": "Moving Word-by-Word in GUI apps",
  "author": "",
  "homepage": "",
  "hostpage": "",
  "manual": "",
  "import_url": "",
  "rules": [
    {
      "description": "Hyper word-wise movement (GUI)",
      "manipulators": [
        {
          "from": {
            "key_code": "i",
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_shift",
                "left_option"
              ]
            }
          },
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^com\\.googlecode\\.iterm2$",
                "^net\\.kovidgoyal\\.kitty$"
              ]
            }
          ],
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": [
                "left_option"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_shift",
                "left_option"
              ]
            }
          },
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^com\\.googlecode\\.iterm2$",
                "^net\\.kovidgoyal\\.kitty$"
              ]
            }
          ],
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": [
                "left_option"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
