{
  "title": "Toggle 'Disable Keys' Profile",
  "rules": [
    {
      "description": "CMD+OPT+CTL + D -> Disable Keyboard",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_option",
                "left_control"
              ]
            }
          },
          "to": [
            {
              "shell_command": "'/Library/Application Support/org.pqrs/Karabiner-Elements/bin/karabiner_cli' --select-profile 'Disable Keys'"
            }
          ]
        }
      ]
    },
    {
      "description": "CMD+OPT+CTL + D -> Enable Keyboard",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_option",
                "left_control"
              ]
            }
          },
          "to": [
            {
              "shell_command": "'/Library/Application Support/org.pqrs/Karabiner-Elements/bin/karabiner_cli' --select-profile 'Default'"
            }
          ]
        }
      ]
    }
  ]
}
